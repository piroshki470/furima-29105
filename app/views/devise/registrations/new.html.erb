<h2>会員情報入力</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname"  %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><em>(確認)</em><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %> 
  </div>

 <div class="field">
    <%= f.label :お名前 %><em>(全角)</em><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %><br/>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :お名前カナ %><em>(全角)</em><br />
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %><br/>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

   <div class="field">
    <%= f.label :生年月日 %><br />
    <%= f.date_select :birth_day, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 5) %>
   </div> 

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
